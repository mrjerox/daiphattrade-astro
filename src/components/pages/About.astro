---
import IncentiveLarge from "@components/incentives/IncentiveLarge.astro";
import CardCategory from "@components/products/CardCategory.astro";
import ProductFeature2 from "@components/products/ProductFeature2.astro";
import PromoSectionLarge from "@components/promo/PromoSectionLarge.astro";
import ReviewSummaryChart from "@components/reviews/ReviewSummaryChart.astro";
import { MEDIA_HOST } from "@configs/constant.conf";
import data from "@public/data.json";

interface Props {
  page: any;
}
const { page }: Props = Astro.props;
let productReviews = data.reviews.filter((x) => x.productID == "01");
---

<main>
  <section class="section1 py-5 mt-5">
    <div class="container">
      <ProductFeature2
        title={page?.title || "About Us"}
        full_description={page?.content || ""}
        data={data.products[2].data || []}
      />
      <div class="my-10">
        <IncentiveLarge />
      </div>
      <div class="my-10">
        <ReviewSummaryChart reviews={productReviews} />
      </div>
      <div class="my-10">
        <PromoSectionLarge
          title={data.products[0].title}
          full_description="The time is now for it to be okay to be great. People in this world shun people for being great. For being a bright color. For standing out. But the time is now to be okay to be the greatest you. Would you believe in what you believe in, if you were the only one who believed it?"
          pageHeaderBgImg={"https://images.unsplash.com/photo-1525904097878-94fb15835963?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2370&q=80"}
          pageHeaderMinVh="50vh"
          pageHeaderRadius="1rem"
        />
      </div>
    </div>
  </section>
</main>
