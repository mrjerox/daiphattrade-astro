---
interface Props {
  thumb_src: string;
  thumb_alt: string;
  title: string;
  color: string;
  size: string;
  price: number;
}
const { thumb_src, thumb_alt, title, color, size, price }: Props = Astro.props;
---

<>
  <div class="card card-product card-plain d-flex mb-4">
    <div class="row">
      <div class="col-4 col-md-2">
        <img
          class="w-100 max-height-100 rounded-3"
          src={`${import.meta.env.BASE_URL}${thumb_src}`}
          alt={thumb_alt}
        />
      </div>
      <div class="col-5 col-md-6">
        <h5 class="text-base mb-1">{title}</h5>
        <h6 class="text-sm font-weight-bold mb-0">
          ${price.toLocaleString()}
        </h6>
        <p class="text-sm mb-0 opacity-8">{color}</p>
        <p class="text-sm mb-0 opacity-8">{size}</p>
      </div>
      <div class="col-2">
        <div class="d-block d-md-flex align-items-center">
          <button class="btn btn-link text-dark d-block d-md-none"
            ><i class="fas fa-pen"></i></button
          >
          <button class="btn btn-dark btn-sm d-none d-md-block">Edit</button>
          <button class="btn btn-link text-dark d-block d-md-none"
            ><i class="fas fa-trash"></i></button
          >
          <button class="btn btn-link text-dark d-none d-md-block"
            >Remove</button
          >
        </div>
      </div>
    </div>
  </div>
</>
