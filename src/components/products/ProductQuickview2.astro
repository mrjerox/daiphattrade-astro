---
import { BASE_URL } from "../../configs/constant.conf";
import ProductBadge from "./ProductBadge.astro";
import ProductRating from "./ProductRating.astro";
import ProductSizes from "./ProductSizes.astro";

interface Props {
  thumb_src: string;
  title: string;
  price: number;
  colors: string[];
  rating: number;
  reviews: number;
  stock: boolean;
}
const { thumb_src, title, price, colors, rating, reviews, stock }: Props =
  Astro.props;
---

<>
  <button
    type="button"
    class="btn btn-dark"
    data-bs-toggle="modal"
    data-bs-target="#exampleModal2"
  >
    Product Quickview 2
  </button>
  <div
    class="modal fade"
    id="exampleModal2"
    role="dialog"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
      <div class="modal-content">
        <div class="card card-product">
          <div class="card-body d-block d-lg-flex p-4">
            <button
              type="button"
              class="btn-close text-dark position-absolute end-0 me-4"
              data-bs-dismiss="modal"
              aria-label="Close"></button>
            <div class="w-100 w-lg-50 text-center">
              {
                thumb_src && (
                  <img
                    class="w-100 rounded-3 mb-4 mt-5 mt-lg-0"
                    src={`${BASE_URL}${thumb_src}`}
                  />
                )
              }
              <a class="text-body" href="#">View details</a>
            </div>
            <div class="w-100 w-lg-50 ps-4 text-center">
              <div class="d-flex justify-content-center">
                {
                  title.length != 0 && (
                    <h3 class="mt-md-5 mb-3 text-center">{title}</h3>
                  )
                }
              </div>
              {
                price && (
                  <>
                    <h4 class="text-center">${price.toLocaleString()}</h4>
                    <input class="opacity-0 d-none" value={price} />
                    <div class="d-flex justify-content-center mb-3">
                      <div class="d-flex align-items-center justify-content-center">
                        {rating != 0 && (
                          <ProductRating rating={rating} reviews={reviews} />
                        )}
                      </div>
                    </div>
                  </>
                )
              }

              <p class="text-center px-5">
                As we live, our hearts turn colder. Cause pain is what we go
                through as we become older.
              </p>

              {
                colors.length != 0 && (
                  <>
                    <h6 class="mt-4">Color</h6>
                    {colors && <ProductBadge colors={colors} />}
                  </>
                )
              }

              <h6 class="mt-4">Size</h6>
              <div class="row mb-2">
                <div class="col-6">
                  <div class="form-check">
                    <input
                      class="form-check-input rounded-2"
                      type="radio"
                      name="flexRadioDefault"
                      id="18l"
                    />
                    <label class="cursor-pointer label-lg" for="18l">
                      <h6>2 Places</h6>
                      <p class="mb-0">That’s what I do</p>
                    </label>
                  </div>
                </div>
                <div class="col-6">
                  <div class="form-check">
                    <input
                      class="form-check-input rounded-2"
                      type="radio"
                      name="flexRadioDefault"
                      id="20l"
                    />
                    <label class="cursor-pointer label-lg" for="20l">
                      <h6>4 Places</h6>
                      <p class="mb-0">That’s what I’m here for</p>
                    </label>
                  </div>
                </div>
              </div>

              <p class="mt-md-7 mb-4">
                What should I buy? <span
                  data-bs-toggle="tooltip"
                  data-bs-placement="top"
                  title="More information related to sizes"
                  data-container="body"
                  data-animation="true"
                  ><i class="fas fa-question-circle ms-1"></i></span
                >
              </p>

              <div class="d-block text-center">
                <button class="btn btn-dark btn-lg w-100">Add to Cart</button>
                <p class="mb-0 d-inline text-xl">
                  <i class="fas fa-shield-alt me-2"></i>
                  Premium Quality
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</>
