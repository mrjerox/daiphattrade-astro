---
interface Props {
  sizes: Map<string, number>;
}
const { sizes }: Props = Astro.props;
const sizeID = Date.now();
---

<>
  <div class="mt-4 d-flex justify-content-between align-items-center">
    <h6 class="mb-0">Size</h6>
    <a href="#" class="text-body mb-0">Size guide</a>
  </div>
  <div class="d-flex flex-wrap text-center my-4">
    {
      Object.entries(sizes).map(([size, amount], i) => (
        <div class="mb-3 me-3">
          <div class="form-check">
            {amount != 0 ? (
              <input
                class="form-check-input rounded-2"
                type="radio"
                name="flexRadioDefault"
                id={`input` + sizeID + i}
              />
            ) : (
              <input
                class="form-check-input rounded-2"
                disabled
                type="radio"
                name="flexRadioDefault"
                id={`input` + sizeID + i}
              />
            )}
            <label class="cursor-pointer" for={`input` + sizeID + i}>
              {size}
            </label>
          </div>
        </div>
      ))
    }
  </div>
</>
