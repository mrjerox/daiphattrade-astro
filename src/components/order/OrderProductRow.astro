---
interface Props {
  product: {
    id: string;
    thumb_src: string;
    thumb_alt: string;
    title: string;
    price: number;
    description: string;
  };
  status: string;
  dateModified: string;
}
const { product, status, dateModified }: Props = Astro.props;
---

<>
  <tr>
    <td scope="row" class="d-flex align-items-center text-sm text-body py-3">
      <img
        class="w-20 w-lg-10 rounded-3"
        src={`${import.meta.env.BASE_URL}${product.thumb_src}`}
        alt={product.thumb_alt}
      />
      <p class="text-sm text-dark font-weight-bold mb-0 ms-3">
        {product.title}
      </p>
    </td>
    <td class="text-sm text-body align-middle pt-3 w-20"
      >${product.price.toLocaleString()}</td
    >
    <td class="text-sm text-body align-middle pt-3 w-20">{status}</td>
    <td class="text-sm text-body align-middle pt-3 w-20">{dateModified}</td>
    <td class="text-sm text-body align-middle pt-3 text-end">
      <a href="#" class="text-dark font-weight-bold">Download</a>
    </td>
  </tr>
</>
